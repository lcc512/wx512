/* pages/post/post-detail/post-detail.wxss */

.container1 {
  display: flex;
  flex-direction: column;
}

.container1 .article-image {
  width: 100%;
  height: 450rpx;
}

.container1 .play{
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  left: 50%;
  top: 175rpx;
  margin-left: -50rpx;
  background-color:#fff;
  opacity: 0.6;
}

.author {
  display: flex;
  height: 100rpx;
  flex-direction: row;
  align-items: center;

  font-size: 24rpx;
}

.author image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.author .author-name {
  margin-left: 10px;
}

.author .author-fabiao {
  margin-left: 10px;
}

.author .author-time {
  margin-left: 10px;
}

.title {
  font-size: 46rpx;
  margin: 30px 0 5px 20px;
}

.tool {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  /* width: 250rpx; */
  /* padding-bottom: 10px; */
  padding: 0 20px;
}

.tool image {
  width: 80rpx;
  height: 80rpx;
  background-color: gold;
  /* margin-left: 10px; */
}

.tool .straight{
  width: 430rpx;
  height: 2px;
  background-color: gold;
}
.content{
  padding: 20px;
}