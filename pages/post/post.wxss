/* pages/post/post.wxss */
page{
  background-color: #ccc;
}
swiper{

  width: 100%;
  height: 450rpx;
  box-shadow: 1px 1px 1px #666;

  
}

swiper image{

    width:100%;
    height:450rpx;
  }

.post-container{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 16rpx;
  background-color: #fff;
  box-shadow: 1px 1px 1px #666;
}

.post-container .article-title{
  display: flex;
  height: 100rpx;
  flex-direction: row;
  align-items: center;
}

.post-container .article-title text{
  padding: 0 20rpx;
  font-size: 20rpx;
}

.post-container .article-title image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.post-container .article-image{
  width: 100%;
  height: 450rpx;
}

.post-container .article-content{
  padding: 10px;
  font-size: 30rpx;
}

.post-container .article-footer{
 display: flex;
 flex-direction: row;
 justify-content: space-around;
 align-items: center;
 width: 250rpx;
 padding-bottom: 10px;
}

.post-container .article-footer image{
  width: 40rpx;
  height: 40rpx;
}
.post-container .article-footer text{
  font-size: 28rpx;
}
